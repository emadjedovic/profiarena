<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/litera-bootstrap.min.css">
    <link rel="stylesheet" href="/css/custom.css">
    <title>PROFIARENA</title>
  </head>
  <body>
    <div class="main-container">
      <%- include('partials/navigation') %>
    
      <div class="flashes">
        <% if (flashMessages) { %>
          <% if (flashMessages.success) { %>
            <div class="flash success"><%= flashMessages.success %></div>
          <% } else if (flashMessages.error) { %>
            <div class="flash error"><%= flashMessages.error %></div>
          <% } %>
        <% } %>
      </div>

      <div class="container"><%- body %></div>
      
      <%- include('partials/footer') %>
      
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/js/hrApp.js"></script>
  </body>
</html>
