
<div class="row mb-4">
  <div class="col">
    <form action="/talent/browse-all-jobs" method="GET" class="form-inline">
      <!-- Search Bar -->
      <input type="text" class="form-control mr-2 w-75" name="search"
        placeholder="Search by title, company, city, description, deadline" value="<%= searchQuery || '' %>" />
  </div>
  <div class="col">
    <button type="submit" class="btn btn-primary">Filter</button>
  </div>
</div>

<!-- Close the form here -->
</form>

<!-- Job Postings Table -->
<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Company</th>
      <th scope="col">City</th>
      <th scope="col">Deadline</th>
      <th scope="col">Apply</th>
    </tr>
  </thead>
  <tbody>
    <% if (allJobs.length > 0) { %>
      <% allJobs.forEach(job => { %>
        <tr>
          <td>
            <a href="<%= `/talent/job/${job.id}` %>" class="text-primary font-weight-bold">
              <%= job.title %>
            </a>
          </td>
          <td><%= job.company %></td>
          <td><%= job.city %></td>
          <td><%= new Date(job.application_deadline).toLocaleDateString() %></td>
          <td>
            Button to Apply
          </td>
        </tr>
      <% }); %>
    <% } else { %>
      <tr>
        <td colspan="5" class="text-center text-muted">
          No job postings available.
        </td>
      </tr>
    <% } %>
  </tbody>
</table>
