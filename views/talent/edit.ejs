<div class="container bg-light p-5" style="width: 800px">
  <form method="POST" class="form text-center" action="<%= `/talent/${currentUser.id}/update?_method=PUT` %>" enctype="multipart/form-data">
    <h2>Edit Your Info</h2>

    <div class="row">
      <div class="col-md-6">
        <label for="inputfirst_name" class="form-label">First Name</label>
        <input type="text" class="form-control mb-2" name="first_name" id="inputfirst_name" value="<%= currentUser.first_name %>" placeholder="First" autofocus />
      </div>

      <div class="col-md-6">
        <label for="inputlast_name" class="form-label">Last Name</label>
        <input type="text" class="form-control mb-2" name="last_name" id="inputlast_name" value="<%= currentUser.last_name %>" placeholder="Last" />
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <label for="inputemail" class="form-label">Email</label>
        <input type="email" class="form-control mb-2" name="email" id="inputemail" value="<%= currentUser.email %>" placeholder="Email" required />
      </div>

      <div class="col-md-6">
        <label for="inputphone" class="form-label">Phone Number</label>
        <input type="text" class="form-control mb-2" name="phone" id="inputphone" value="<%= currentUser.phone || '' %>" placeholder="Phone Number" />
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <label for="inputaddress" class="form-label">Address</label>
        <input type="text" class="form-control mb-2" name="address" id="inputaddress" value="<%= currentUser.address || '' %>" placeholder="Address" />
      </div>

      <div class="col-md-6">
        <label for="inputdate_of_birth" class="form-label">Date of Birth</label>
        <input type="date" class="form-control mb-2" name="date_of_birth" id="inputdate_of_birth" value="<%= currentUser.date_of_birth || '' %>" placeholder="Date of Birth" />
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <label for="inputabout" class="form-label">About</label>
        <textarea class="form-control mb-2" name="about" id="inputabout" placeholder="About"><%= currentUser.about || '' %></textarea>
      </div>

      <div class="col-md-6">
        <label for="inputeducation" class="form-label">Education (comma separated)</label>
        <textarea class="form-control mb-2" name="education" id="inputeducation" placeholder="Education (comma separated)"><%= currentUser.education ? currentUser.education.join(', ') : '' %></textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <label for="inputskills" class="form-label">Skills (comma separated)</label>
        <textarea class="form-control mb-2" name="skills" id="inputskills" placeholder="Skills (comma separated)"><%= currentUser.skills ? currentUser.skills.join(', ') : '' %></textarea>
      </div>

      <div class="col-md-6">
        <label for="inputlanguages" class="form-label">Languages (comma separated)</label>
        <textarea class="form-control mb-2" name="languages" id="inputlanguages" placeholder="Languages (comma separated)"><%= currentUser.languages ? currentUser.languages.join(', ') : '' %></textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <label for="inputsocials" class="form-label">Social Links (comma separated)</label>
        <textarea class="form-control mb-2" name="socials" id="inputsocials" placeholder="Social Links (comma separated)"><%= currentUser.socials ? currentUser.socials.join(', ') : '' %></textarea>
      </div>

      <div class="col-md-6">
        <label for="inputcv" class="form-label">Upload CV</label>
        <input type="file" class="form-control mb-2" name="cv" id="inputcv" placeholder="Upload CV" />
        <% if (currentUser.cv) { %>
        <small class="text-muted">Current CV: <a href="/<%= currentUser.cv %>" target="_blank">View CV</a></small>
        <% } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <label for="inputprojects" class="form-label">Projects</label>
        <textarea class="form-control mb-2" name="projects" id="inputprojects" placeholder="Projects"><%= currentUser.projects || '' %></textarea>
      </div>

      <div class="col-md-6">
        <label for="inputcertificates" class="form-label">Upload Certificates</label>
        <input type="file" class="form-control mb-2" name="certificates" id="inputcertificates" placeholder="Upload Certificates" multiple />
      </div>
    </div>

    <button type="submit" class="btn btn-outline-dark m-3">UPDATE</button>
  </form>
</div>