<h1>User Data for <%= user.fullName %></h1>
<table class="table">
  <tr>
    <th>Name</th>
    <td><%= user.fullName %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= user.email %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= user.zipCode %></td>
  </tr>
</table>

<div class="mt-4">
  <a href="/users" class="btn btn-outline-dark mt-1">View all users</a>
</div>
<div>
  <a href="<%=`/users/${user._id}/edit`%>" class="btn btn-outline-dark mt-1"> Edit User Details </a>
</div>
<div>
  <a
    href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
    onclick="return confirm('Are you sure you want to delete this user?')"
    class="btn btn-outline-dark mt-1"
    >Delete</a
  >
</div>
