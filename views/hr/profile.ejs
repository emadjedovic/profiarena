<!-- Main content -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      
      <!-- Profile Header Section -->
      <div class="text-center p-3 mb-4" style="background-color: #f8f9fa; border-radius: 10px;">
        <p class="lead mb-0">Manage your account and details</p>
      </div>

      <!-- Profile Details Table -->
      <div class="card mb-4">
        <div class="card-header">
          <h5>Personal Information</h5>
        </div>
        <div class="card-body">
          <table class="table">
            <tr>
              <th>Email</th>
              <td><%= currentUser.email %></td>
            </tr>
            <tr>
              <th>Phone</th>
              <td><%= currentUser.phone || "N/A" %></td>
            </tr>
            <tr>
              <th>Company Name</th>
              <td><%= currentUser.company_name || "N/A" %></td>
            </tr>
            <tr>
              <th>Created At</th>
              <td><%= formatDate(currentUser.created_at) %></td>
            </tr>
          </table>
        </div>
      </div>

      <!-- Edit and Delete Buttons -->
      <div class="d-flex justify-content-between">
        <a href="<%= `/hr/${currentUser.id}/edit` %>" class="btn btn-light mt-1">Edit Your Info</a>
        <a href="<%= `/${currentUser.id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete your account?')" class="btn btn-danger mt-1">Delete Account</a>
      </div>

    </div>
  </div>
</div>
