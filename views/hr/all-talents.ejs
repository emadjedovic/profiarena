<div class="container">
  <h1 class="text-center mb-4">Browse Talents</h1>

  <form method="GET" action="/hr/all-talents" class="mb-4">
    <div class="input-group" style="max-width: 400px; margin: 0 auto">
      <input type="text" name="search" class="form-control" placeholder="Search talents..." value="<%= search || '' %>" />
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <% if (talents && talents.length> 0) { %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Date of Birth</th>
        <th>Education</th>
      </tr>
    </thead>
    <tbody>
      <% talents.forEach(talent=> { %>
      <tr>
        <td>
          <%= talent.first_name %>
        </td>
        <td>
          <%= talent.last_name %>
        </td>
        <td>
          <%= talent.email %>
        </td>
        <td>
          <%= talent.phone || "N/A" %>
        </td>
        <td>
          <%= talent.address || "N/A" %>
        </td>
        <td>
          <%= talent.date_of_birth ? new Date(talent.date_of_birth).toLocaleDateString() : "N/A" %>
        </td>
        <td>
          <%= talent.education ? talent.education.join(", ") : " N/A" %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <p>No talents found.</p>
  <% } %>
</div>