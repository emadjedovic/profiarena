<div class="container mt-5">
    <h2>Dashboard</h2>
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Total Applications</h5>
            <p class="card-text"><%= stats.totalApplications %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Average Candidate Score</h5>
            <p class="card-text"><%= stats.avgCandidateScore ? stats.avgCandidateScore.toFixed(2) : 'N/A' %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Average Selection Time (hours)</h5>
            <p class="card-text">
                <%= stats.avgSelectionTime !== null && !isNaN(stats.avgSelectionTime) ? stats.avgSelectionTime.toFixed(2) : 'N/A' %>
              </p>
              
          </div>
        </div>
      </div>
    </div>
  </div>
  