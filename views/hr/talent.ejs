<h2 class="mb-4">
  <div>
    <%= talent.first_name %>
    <%= talent.last_name %>
  </div>
</h2>

<div class="row">

  <div class="col-md-6">

    <!-- Personal Info Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Personal Information</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <strong>Email:</strong>
            <%= talent.email %>
          </div>
          <div class="col-md-6">
            <strong>Phone:</strong>
            <%= talent.phone || "N/A" %>
          </div>
          <div class="col-md-6">
            <strong>Address:</strong>
            <%= talent.address || "N/A" %>
          </div>
          <div class="col-md-6">
            <strong>Date of Birth:</strong>
            <%= formatDate(talent.date_of_birth) %>
          </div>
        </div>
      </div>
    </div>

    <!-- About Me Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>About Me</h5>
      </div>
      <div class="card-body">
        <%= talent.about || "N/A" %>
      </div>
    </div>

    <!-- Education Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Education</h5>
      </div>
      <div class="card-body">
        <%= talent.education || "N/A" %>
      </div>
    </div>

    <!-- Skills Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Skills</h5>
      </div>
      <div class="card-body">
        <%= talent.skills || "N/A" %>
      </div>
    </div>

    <!-- Languages Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Languages</h5>
      </div>
      <div class="card-body">
        <%= talent.languages || "N/A" %>
      </div>
    </div>

  </div>

  <div class="col-md-6">

    <!-- Social Links Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Social Links</h5>
      </div>
      <div class="card-body">
        <% if (talent.socials && talent.socials.length> 0) { %>
        <% talent.socials.forEach((link, index)=> { %>
        <% const absoluteLink=link.startsWith('http://') || link.startsWith('https://') ? link : `https://${link}`;
              %>
        <div class="d-flex justify-content-between align-items-center mb-2">
          <a href="<%= absoluteLink %>" target="_blank" rel="noopener noreferrer">Social Link <%= index + 1 %></a>
        </div>
        <% }); %>
        <% } else { %>
        <span>N/A</span>
        <% } %>
      </div>
    </div>

    <!-- CV Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>CV</h5>
      </div>
      <div class="card-body">
        <% if (talent.cv) { %>
        <div class="d-flex justify-content-between align-items-center">
          <a href="<%= `/${talent.cv}` %>" target="_blank" class="btn btn-primary">View CV</a>
        </div>
        <% } else { %>
        <span>N/A</span>
        <% } %>
      </div>
    </div>

    <!-- Certificates Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Certificates</h5>
      </div>
      <div class="card-body">
        <% if (talent.certificates && talent.certificates.length> 0) { %>
        <% talent.certificates.forEach((certificate, index)=> { %>
        <div class="d-flex justify-content-between align-items-center mb-2">
          <a href="<%= `/${certificate}` %>" target="_blank">Certificate <%= index + 1 %></a>
        </div>
        <% }); %>
        <% } else { %>
        <span>N/A</span>
        <% } %>
      </div>
    </div>

    <!-- Projects Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Projects</h5>
      </div>
      <div class="card-body">
        <%= talent.projects || "N/A" %>
      </div>
    </div>
  </div>
</div>

<div class="mb-3">
  <p><em>Account Created on
      <%= talent.created_at ? formatDate(talent.created_at) : "N/A" %>
    </em></p>
</div>


</div>