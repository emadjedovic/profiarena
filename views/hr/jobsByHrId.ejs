<h2 class="mb-4">My Job Postings</h2>
<table class="table table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Company</th>
      <th scope="col">City</th>
      <th scope="col">Deadline</th>
      <th scope="col">Archive</th>
    </tr>
  </thead>
  <tbody>
    <% if (jobPostings.length > 0) { %> <% jobPostings.forEach(jobPosting => {
    %>
      <!-- Job Title with clickable link -->
      <td>
        <a
          href="/job-posting/<%= jobPosting.id %>"
          class="text-primary font-weight-bold"
        >
          <%= jobPosting.title %>
        </a>
      </td>
      <!-- Company Name -->
      <td><%= jobPosting.company %></td>
      <!-- City -->
      <td><%= jobPosting.city %></td>
      <!-- Application Deadline -->
      <td>
        <%= new Date(jobPosting.application_deadline).toLocaleDateString() %>
      </td>
      <!-- Archive Checkbox -->
      <td class="text-center">
        <form method="POST" action="/toggle-archive-job/<%= jobPosting.id %>">
          <input type="checkbox" name="archived" onchange="this.form.submit()"
          <%= jobPosting.is_archived ? 'checked' : '' %> >
        </form>
      </td>
    </tr>
    <% }); %> <% } else { %>
    <tr>
      <td colspan="5" class="text-center text-muted">
        No job postings available.
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
