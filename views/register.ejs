<div class="container" style="width: 400px">
  <form action="/register" class="form text-center" method="POST">
    <!-- First Name -->
    <input
      type="text"
      name="first_name"
      id="inputFirstName"
      placeholder="First name"
      class="form-control m-2"
      autofocus
      required
    />

    <!-- Last Name -->
    <input
      type="text"
      name="last_name"
      id="inputLastName"
      placeholder="Last name"
      class="form-control m-2"
      required
    />

    <!-- Password -->
    <input
      type="password"
      name="password"
      id="inputPassword"
      placeholder="Password"
      class="form-control m-2"
      required
    />

    <!-- Email -->
    <input
      type="email"
      name="email"
      id="inputEmail"
      placeholder="Email address"
      class="form-control m-2"
      required
    />

    <!-- Phone -->
    <input
      type="text"
      name="phone"
      id="inputPhone"
      placeholder="Phone number"
      class="form-control m-2"
      required
    />

    <!-- Role Selection -->
<div class="m-3">
  <label for="role" class="form-label">I am a...</label>
  <select name="role" id="role" class="form-select" required>
    <option value="" disabled selected>Select your role</option>
    <option value="0">HR Manager</option>
    <option value="1">Talent</option>
  </select>
</div>


    <!-- Submit Button -->
    <button type="submit" class="btn btn-outline-dark m-4">Register</button>
  </form>
</div>
